{
  "name": "obsidian-daily-prompts",
  "version": "1.0.0",
  "description": "A flexible system for receiving daily writing prompts, reflections, or devotionals within Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "release": "node scripts/release.js",
    "test": "jest"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "prompts",
    "daily",
    "writing"
  ],
  "author": "Daily Prompts Plugin",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "jest": "^30.0.5",
    "obsidian": "latest",
    "ts-jest": "^29.4.0",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  }
}
